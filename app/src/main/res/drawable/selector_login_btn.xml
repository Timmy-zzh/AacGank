<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/c_redeem" />
            <corners android:radius="5dp" />
            <gradient android:endColor="@color/pink" android:startColor="@color/c_redeem" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/c_redeem" />
            <corners android:radius="5dp" />
            <gradient android:endColor="#55E57B7B" android:startColor="#55ED5954" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/c_redeem" />
            <corners android:radius="5dp" />
            <gradient android:endColor="@color/pink" android:startColor="@color/c_redeem_trans" />
        </shape>
    </item>
</selector>