<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.multimedia.audio.AudioStudyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="使用AudioRecord进行音频数据采集" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startAudioRecord"
            android:text="1.音频采集" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="stopAudioRecord"
            android:text="2.停止采集" />

        <Button
            android:id="@+id/btn_convet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="convetPcmToWav"
            android:text="3.PCM文件转换成WAV文件" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="使用AudioTrack进行音频数据播放" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="playAudioRecord"
            android:text="4.MODE_STREAM模式播放采集的音频数据" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="playInModeStatic"
            android:text="4.1 MODE_STATIC模式播放音频数据" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pauseAudioRecord"
            android:text="5.停止播放音频数据" />

    </LinearLayout>
</ScrollView>