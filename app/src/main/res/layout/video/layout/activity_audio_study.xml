<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.video.audio.AudioStudyActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="AudioRecord音频采集" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:onClick="startAudioRecord"
                android:layout_height="wrap_content"
                android:text="1.音频采集" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="match_parent"
                android:onClick="stopAudioRecord"
                android:layout_height="wrap_content"
                android:text="2.停止采集" />

            <Button
                android:id="@+id/btn_convet"
                android:layout_width="match_parent"
                android:onClick="convetPcmToWav"
                android:layout_height="wrap_content"
                android:text="3.PCM文件转换成WAV文件" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="match_parent"
                android:onClick="playAudioRecord"
                android:layout_height="wrap_content"
                android:text="播放采集的音频数据" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>