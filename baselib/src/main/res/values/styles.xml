<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <!--应用全局背景色-->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="activityAnimation" parent="@android:style/Animation.Activity">
        <!-- 界面A打开界面B: A -> B  -->
        <!--界面B进入动画-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
    </style>


    <style name="CollapsingToolbarTitleDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f2ecec</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CollapsingToolbarTitleLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="WebTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--开始1111111111111111111111111111111111111线条样式11111111111111111111111111111111-->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/T_F2</item>
    </style>

    <style name="VerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/T_F2</item>
    </style>

    <!--横竖自定义线-->
    <style name="Line" parent="HorizontalLine">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="LineMargin" parent="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Line_H_1" parent="HorizontalLine">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line_V_1" parent="VerticalLine">
        <item name="android:layout_width">1dp</item>
    </style>


</resources>
